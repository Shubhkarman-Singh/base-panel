{
  "name": "impulse",
  "version": "0.0.1",
  "description": "Impulse is an open source panel for managing and operating game servers and applications built using Node.js with Express and Dockerode.",
  "main": "index.js",
  "bin": {
    "impulse": "./exec/bin/index.js"
  },
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "build": "npx tailwindcss -i ./public/tw.conf -o ./public/assets/tailwind.css",
    "build:watch": "npx tailwindcss -i ./public/tw.conf -o ./public/assets/tailwind.css --watch",
    "setup": "npm install && cp .env.example .env && npm run generate-secrets && npm run create-user",
    "generate-secrets": "node regen.js",
    "create-user": "node exec/createUser.js",
    "seed": "node exec/seed.js",
    "test": "npm run test-config && npm run security-audit",
    "test-config": "node test-config.js",
    "security-audit": "node scripts/security-audit.js",
    "migrate": "node migrate-to-env.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "reset": "rm -f impulse.db sessions.db && npm run create-user"
  },
  "author": "impulseOSS",
  "license": "MIT",
  "dependencies": {
    "@keyv/sqlite": "^3.6.7",
    "dotenv": "^16.3.1",
    "@keyvhq/core": "^2.1.7",
    "@keyvhq/mysql": "^2.1.7",
    "@tailwindcss/forms": "^0.5.10",
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.1.2",
    "better-sqlite3-session-store": "^0.1.0",
    "body-parser": "^1.20.3",
    "cat-loggr": "^1.2.2",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cookie-parser": "^1.4.7",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^7.4.1",
    "express-session": "^1.18.2",
    "express-ws": "^5.0.2",
    "form-data": "^4.0.4",
    "fs": "^0.0.1-security",
    "keyv": "^4.5.4",
    "multer": "^2.0.2",
    "node-schedule": "^2.1.1",
    "nodemailer": "^6.9.15",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.4",
    "readline": "^1.3.0",
    "speakeasy": "^2.0.0",
    "tailwindcss": "^3.4.14",
    "uuid": "^10.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "browser-sync": "^2.26.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
